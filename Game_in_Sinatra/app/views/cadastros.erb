			<input type="text" id="txtEmail" placeholder="Seu Email" required><br>
			<label for="dtNasc">Data Nascimento:</label>
			<input type="date" id="dtNasc" required><br>
			<label for="txtUser">Usu√°rio:</label>
			<input type="text" id="txtUser" placeholder="Apelido" required><br>
			<label for="txtSenha">Senha:</label>
			<input type="password" id="txtSenha" placeholder="*****" required>
		    </fieldset>
		</form>
		<div id="form">
		<a href="/"><button name="btnMenu" id="default_button">Voltar</button></a>
